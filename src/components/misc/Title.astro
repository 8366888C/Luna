---
import Heart from "./Heart";
import {
  CalendarIcon,
  HeartIcon,
  MessageIcon,
  EyeIcon,
  TagIcon,
} from "./Icons";

const { frontmatter } = Astro.props;
---

<div>
  <h1 class="bg-background mb-3 text-4xl">
    {frontmatter.title}
  </h1>
  <div class="mb-3">
    <div class="flex gap-3">
      <div class="flex gap-1">
        <CalendarIcon className="size-4 stroke-1" />
        <p class="font-mono text-sm opacity-90">
          {
            frontmatter.pubDate
              .toLocaleDateString("en-GB", {
                day: "numeric",
                month: "short",
                year: "numeric",
              })
              .slice(0, 11)
          }
        </p>
      </div>
      <!-- <Heart client:load /> -->
    </div>
    <div class="group flex items-center gap-2">
      <TagIcon
        className="fill-background stroke-foreground group-hover:fill-foreground group-hover:stroke-background size-4 stroke-1"
      />
      <div class="space-x-1">
        {
          frontmatter.tags.map((tag: string) => (
            <a
              href={`/tags/${tag}`}
              class="hover:text-accent text-sm opacity-90"
            >
              {tag}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</div>
