---
import {
  liClass,
  titleClass,
  subTitleClass,
  descClass,
  iconClass,
} from "../../styles/utility";
import { CalendarIcon } from "../misc/Icons";

const { title, date, description, url } = Astro.props;
---

<a href={url} class="card group">
  <h3 class="card-title">
    {title}
  </h3>
  <div class="flex flex-col gap-1">
    <p class="text-sm">
      {date}
    </p>
  </div>
</a>
