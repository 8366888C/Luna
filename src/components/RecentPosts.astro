import PostCard from "./misc/PostCard.astro";
---

<section>
  <hr class="mt-12 mb-8 border-[var(--color-text)]" />
  <h2 class="text-3xl">Recent Posts</h2>
  <div class="m-8 mb-16 flex flex-col gap-8">
    <PostCard
      title="Customizing Luna"
      date="13 Jun, 2025"
