---
import { RightArrowIcon, RightIcon } from "../utils/Icons";

const { title, date, url, tags } = Astro.props;
---

<a
  href={url}
  class="hover:bg-accent ring-background hover:ring-accent group flex h-full flex-col gap-2 rounded-lg shadow-lg ring-3 hover:shadow-none hover:ring-3 active:ring-0"
>
  <div class="mx-4 mt-2 flex items-center justify-between gap-6">
    <div class="flex items-center gap-3">
      <RightIcon className="size-5 stroke-1 opacity-80 group-hover:size-0" />
      <h3
        class="text-foreground group-hover:text-background self-start rounded-lg text-xl group-hover:-translate-x-3 group-hover:font-semibold group-hover:tracking-wide"
      >
        {title}
      </h3>
    </div>
    <div class="flex">
      <p
        class="mt-1 text-sm opacity-90 group-hover:text-[0rem] group-hover:opacity-0"
      >
        {date}
      </p>
      <RightArrowIcon
        className="stroke-background size-0 stroke-2 group-hover:size-6"
      />
    </div>
  </div>
  <div class="flex flex-col gap-1">
    <div class="mx-3 flex space-x-3">
      {
        tags.map((tag: string) => (
          <p class="ring-foreground bg-background mx-1 flex items-center gap-1 rounded-lg px-3 pb-0.5 text-[0rem] opacity-90 group-hover:mb-3 group-hover:text-sm">
            {tag}
          </p>
        ))
      }
    </div>
  </div>
</a>
