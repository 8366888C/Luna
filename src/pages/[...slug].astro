---
import { render, getCollection } from "astro:content";
import BlogLayout from "../layouts/BlogLayout.astro";
import type { BlogType } from "../content/content.config";

export async function getStaticPaths() {
  const blogs: BlogType[] = await getCollection("blog");
  return blogs.map((blog: BlogType) => ({
    params: { slug: blog.data.slug },
    props: { blog },
  }));
}

const { blog } = Astro.props;
const { Content, headings } = await render(blog);
---

<BlogLayout frontmatter={blog.data} headings={headings}>
  <Content />
</BlogLayout>
