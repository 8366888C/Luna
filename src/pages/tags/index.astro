---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import type { BlogType } from "../../content/content.config";

const blogs = await getCollection("blog");
const tags = [
  ...new Set(blogs.map((blog: BlogType) => blog.data.tags).flat()),
].sort();
---

<BaseLayout
  title="Tags"
  description="All unique tags of Luna blogs."
  image="./favicon.png"
  url="https://lunakit.netlify.app/tags"
>
  <div class="center">
    <h1 class="heading">Tags</h1>
    <ul class="mx-8 my-3 grid space-y-3">
      {
        tags.map((tag) => {
          return (
            <li>
              <a href={`/tags/${tag}/1`} class="hover:text-accent text-lg">
                {tag}
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>
</BaseLayout>
