---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

const posts = await getCollection("blogs");
const tags = [
  ...new Set(posts.map((post: any) => post.data.tags).flat()),
].sort();
---

<BaseLayout
  title="Tags"
  description="All unique tags of Luna blogs."
  image="./favicon.png"
  url="https://lunakit.netlify.app/tags"
>
  <main class="mx-13">
    <h1 class="text-6xl">Tags</h1>
    <ul class="m-8 space-y-2">
      {
        tags.map((tag) => {
          return (
            <li>
              <a
                href={`/tags/${tag}`}
                class="hover:text-accent-light dark:hover:text-accent-dark text-lg"
              >
                {tag}
              </a>
            </li>
          );
        })
      }
    </ul>
  </main>
</BaseLayout>
