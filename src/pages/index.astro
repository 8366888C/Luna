---
import BaseLayout from "../layouts/BaseLayout.astro";
import FeaturedPosts from "../components/FeaturedPosts.astro";
import { RightArrowIcon } from "../components/misc/Icons";
import {
  bodyMargin,
  urlClass,
  routeBarClass,
  routeIconClass,
  routeTextClass,
} from "../styles/utility";
---

<BaseLayout
  title="Luna"
  description="A minimalist Astro starter for mini blogs."
  image="./favicon.png"
  url="https://lunakit.netlify.app"
>
  <main class={`${bodyMargin}`}>
    <section>
      <h1 class="my-6 text-4xl">Hey</h1>
      <div class="space-y-4 text-lg">
        <p>
          Luna is a static, minimal, responsive and SEO-friendly blog theme on
          Astro. This theme follows best practices and provides accessibility
          out of the box. Light and dark mode are supported by default.
          Moreover, additional color schemes can also be configured.
        </p>
        <p>
          Read the featured blog posts or check <a href="" class={`${urlClass}`}
            >README</a
          > for more info.
        </p>
      </div>
    </section>
    <hr class="border-foreground/30 mx-13 my-8" />
    <section>
      <FeaturedPosts />
    </section>
    <div class="flex items-center justify-center">
      <a href="/posts" class={`${routeBarClass}`}>
        <span class={routeTextClass}>All Posts</span>
        <RightArrowIcon className={routeIconClass} />
      </a>
    </div>
  </main>
</BaseLayout>
